{
  "name": "gitbook2epub",
  "version": "1.0.0",
  "description": "将GitBook项目转换为标准EPUB电子书格式的纯Node.js工具",
  "main": "main.js",
  "bin": {
    "gitbook2epub": "gitbook2epub.js"
  },
  "scripts": {
    "start": "node gitbook2epub.js",
    "convert": "node gitbook2epub.js",
    "gui": "electron .",
    "build": "electron-builder",
    "check-deps": "node check-dependencies.js",
    "check-pandoc": "pandoc --version",
    "install-pandoc-help": "node -e \"console.log('请访问 https://pandoc.org/installing.html 安装 pandoc')\""
  },
  "keywords": [
    "gitbook",
    "epub",
    "ebook",
    "markdown",
    "pandoc",
    "converter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.3.6",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "js-yaml": "^4.1.0"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
